{
  "name": "exam-paper-generator",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "npm start -w frontend",
    "server": "npm start -w backend",
    "dev": "npm run dev -w frontend",
    "dev-server": "npm run dev -w backend",
    "build": "npm run build -w frontend",
    "test": "npm run test --workspaces --if-present",
    "full": "concurrently \"npm run start -w backend\" \"npm run start -w frontend\"",
    "clean": "rm -rf ./node_modules ./backend/node_modules ./frontend/node_modules ./frontend/dist",
    "docker": "docker-compose up -d"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
